{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}

	<div class="admin-content">
		{% include 'admin/header.html.twig' %}
		<div class="col-md-9 ">
			<div class="profil bg-secondary">
				<div class="profil-name">Bonjour
					<span class="fw-bold">Thomas</span>
				</div>
			</div>
			<div class="datas-content">
				<div class="add-data">
					<a href="{{ path('app_user_new') }}">Créer un utilisateur</a>
				</div>
				<div class="table-responsive">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Id</th>
								<th>Email</th>
								<th>Nom</th>
								<th>Prenom</th>
								<th>Adresse</th>
								<th>Phone</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for user in users %}
								<tr>
									<td>{{ user.id }}</td>
									<td>{{ user.email }}</td>
									<td>{{ user.nom }}</td>
									<td>{{ user.prenom }}</td>
									<td>{{ user.adresse }}</td>
									<td>{{ user.phone }}</td>
									<td>
										<a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="9">Pas de résultats</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>

	{# <a href="{{ path('app_user_new') }}">Create new</a> #}
{% endblock %}
