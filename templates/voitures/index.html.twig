{% extends 'base.html.twig' %}

{% block title %}Voitures index
{% endblock %}

{% block body %}
	<div class="admin-content">
		{% include 'admin/header.html.twig' %}
		<div class="col-md-9 ">
			<div class="profil bg-secondary">
				<div class="profil-name">Bonjour
					<span class="fw-bold">{{ user.prenom }}</span>
				</div>
			</div>
			<div class="datas-content">
				<div class="add-data">
					<a href="{{ path('app_voitures_new') }}">Ajouter une voiture</a>
				</div>
				<div class="table-responsive">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Id</th>
								<th>Marque</th>
								<th>Modele</th>
								<th>Km</th>
								<th>Annee</th>
								<th>Couleur</th>
								<th>Boite</th>
								<th>Carburant</th>
								<th>Prix</th>
								<th>Image</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for voiture in voitures %}
								<tr>
									<td>{{ voiture.id }}</td>
									<td>{{ voiture.marque }}</td>
									<td>{{ voiture.modele }}</td>
									<td>{{ voiture.km }}</td>
									<td>{{ voiture.annee }}</td>
									<td>{{ voiture.couleur }}</td>
									<td>{{ voiture.boite }}</td>
									<td>{{ voiture.carburant }}</td>
									<td>{{ voiture.prix }}</td>
									<td><img src="{{ voiture.image }}" alt="Voiture image" class=""></td>
									<td>
										<a href="{{ path('app_voitures_edit', {'id': voiture.id}) }}">Modifier</a>
										<a href="{{ path('app_voitures_duplicate', {'id': voiture.id}) }}">Dupliquer</a>
										<form method="post" action="{{ path('app_voitures_delete', {'id': voiture.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline;">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voiture.id) }}">
											<button class="btn btn-danger btn-sm">Supprimer</button>
										</form>

									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="11">Aucune voiture</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
