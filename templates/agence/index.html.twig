{% extends 'base.html.twig' %}

{% block title %}Agence index
{% endblock %}

{% block body %}
	<div class="admin-content">
		{% include 'admin/header.html.twig' %}
		<div class="col-md-9 ">
			<div class="profil bg-secondary">
				<div class="profil-name">Bonjour
					<span class="fw-bold">{{ user.prenom }}</span>
				</div>
			</div>
			<div class="datas-content">
				<div class="add-data">
					<a href="{{ path('app_agence_new') }}">Ajouter une agence</a>
				</div>
				<div class="table-responsive">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Id</th>
								<th>Nom</th>
								<th>Ville</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for agence in agences %}
								<tr>
									<td>{{ agence.id }}</td>
									<td>{{ agence.nom }}</td>
									<td>{{ agence.ville }}</td>
									<td>
										<a href="{{ path('app_agence_edit', {'id': agence.id}) }}">Modifier</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">Pas de r√©sultats</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<a href="{{ path('app_agence_new') }}">Create new</a>
{% endblock %}
